{
  "name": "Slack Background Changer",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "This extension can change your background image of Slack view to your favorite picture.",
  "icons": {
    "16": "icon/16.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "permissions": [
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.slack.com/*"
      ],
      "js": ["script/skin_changer.js"],
      "css": ["style/style.css"]
    }
  ]
}
